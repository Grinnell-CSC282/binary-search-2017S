// +---------+-------------------------------------------------------
// | Headers |
// +---------+

#include "search.h"

// +--------------------+--------------------------------------------
// | Exported Functions |
// +--------------------+

int
search (int val, int *vals, int n)
{
  int i=n/2;
  int lower=0;
  int upper=n-1;
  while (vals[i]!=val) {
    if (vals[i] > val){
      upper=i;
      i=(upper+lower)/2;
    }
    else {
      lower=i;
      i=upper+lower/2;
    }
    if (upper==lower && vals[i]!=val){
      return -1;
    }
  }
  return i;
} // search
